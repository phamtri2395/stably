{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@common/*": ["src/common/*"],
      "@modules/*": ["src/modules/*"],
      "@schemas": ["src/schemas/index.ts"]
    },
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "pretty": true,
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": ["**/src/**/*.ts", "**/src/**/*.tsx"],
  "exclude": ["**/*.test.ts", "**/*.test.tsx"]
}
